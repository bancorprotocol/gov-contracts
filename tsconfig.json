{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "typeRoots": [
      "../governance/node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "truffle-typings"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../governance/node_modules",
    "build"
  ]
}